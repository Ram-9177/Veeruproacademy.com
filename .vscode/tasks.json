{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Django: Run dev server",
			"type": "shell",
			"command": ".venv/bin/python manage.py runserver 0.0.0.0:8000",
			"group": "build"
		},
		{
			"label": "Django: Check",
			"type": "shell",
			"command": ".venv/bin/python manage.py check",
			"group": "build"
		},
		{
			"label": "Django: Migrate",
			"type": "shell",
			"command": ".venv/bin/python manage.py migrate",
			"group": "build"
		},
		{
			"label": "Django: Seed demo content",
			"type": "shell",
			"command": ".venv/bin/python manage.py seed_demo",
			"group": "build"
		},
		{
			"label": "Django: Collect static",
			"type": "shell",
			"command": ".venv/bin/python manage.py collectstatic --noinput",
			"group": "build"
		}
	]
}