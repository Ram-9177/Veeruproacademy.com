{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["components/*", "app/components/*"],
      "@/components/ui/*": ["components/ui/*"],
      "@/app/*": ["app/*"],
      "@/lib/*": ["lib/*"],
      "@/src/*": ["src/*"],
      "@/data/*": ["data/*"]
    },
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "allowImportingTsExtensions": true,
    "ignoreDeprecations": "6.0"
  },
  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "data/**/*.ts",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["out", "build", "src/components/public"]
}
