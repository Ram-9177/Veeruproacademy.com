# ==========================================
# PRODUCTION ENVIRONMENT VARIABLES
# For veeruproacademy.com
# ==========================================
# Copy this file to `.env` and fill in your actual values.
# NEVER commit `.env` with secrets to version control.

# Core Settings
DJANGO_DEBUG=false
DJANGO_SECRET_KEY="your-production-secret-key-here-generate-a-new-one"

# Generate a new secret key using:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"

# Locale / Time
DJANGO_LANGUAGE_CODE="en-us"
DJANGO_TIME_ZONE="Asia/Kolkata"

# Database (Use PostgreSQL in production)
# For Render.com, Heroku, Railway, etc - they provide DATABASE_URL
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# DB connection tuning
DJANGO_DB_CONN_MAX_AGE=60
DJANGO_DB_CONN_HEALTH_CHECKS=true

# Allowed hosts (your domain)
DJANGO_ALLOWED_HOSTS="veeruproacademy.com,www.veeruproacademy.com"

# Production Security (Enable all for HTTPS)
DJANGO_STRICT_PRODUCTION=true
DJANGO_SECURE_SSL_REDIRECT=true
DJANGO_SESSION_COOKIE_SECURE=true
DJANGO_CSRF_COOKIE_SECURE=true
DJANGO_SESSION_COOKIE_SAMESITE="Lax"
DJANGO_CSRF_COOKIE_SAMESITE="Lax"

# HSTS Settings (Recommended for production)
DJANGO_SECURE_HSTS_SECONDS=31536000
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=true
DJANGO_SECURE_HSTS_PRELOAD=false

# CORS/CSRF (your domain with https)
DJANGO_CORS_ALLOWED_ORIGINS="https://veeruproacademy.com,https://www.veeruproacademy.com"
DJANGO_CSRF_TRUSTED_ORIGINS="https://veeruproacademy.com,https://www.veeruproacademy.com"

# Email Configuration (Required for password reset)
DJANGO_EMAIL_BACKEND="django.core.mail.backends.smtp.EmailBackend"
DJANGO_EMAIL_HOST="smtp.example.com"
DJANGO_EMAIL_PORT=587
DJANGO_EMAIL_HOST_USER="your-smtp-username"
DJANGO_EMAIL_HOST_PASSWORD="your-smtp-password"
DJANGO_EMAIL_USE_TLS=true
DJANGO_DEFAULT_FROM_EMAIL="Veeru's Pro Academy <noreply@veeruproacademy.com>"

# Media Storage (Optional: S3-compatible storage)
DJANGO_MEDIA_URL="/media/"
DJANGO_MEDIA_ROOT="media"

# Optional: S3-compatible media (Cloudflare R2 / AWS S3 / DigitalOcean Spaces)
DJANGO_USE_S3_MEDIA=false
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_STORAGE_BUCKET_NAME=""
AWS_S3_ENDPOINT_URL=""
AWS_S3_REGION_NAME="auto"
AWS_S3_ADDRESSING_STYLE="path"
AWS_QUERYSTRING_AUTH=false
DJANGO_S3_PUBLIC_MEDIA_URL=""
