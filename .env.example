# ==========================================
# DJANGO ENVIRONMENT VARIABLES TEMPLATE
# ==========================================
# Copy this file to `.env` and fill in your actual values.
# NEVER commit `.env` with secrets.

# Core
DJANGO_DEBUG=true
DJANGO_SECRET_KEY="change-me"

# Locale / time
DJANGO_LANGUAGE_CODE="en-us"
DJANGO_TIME_ZONE="UTC"

# Database
# For local dev you can omit DATABASE_URL and SQLite will be used.
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# DB connection tuning (recommended for managed Postgres)
DJANGO_DB_CONN_MAX_AGE=60
DJANGO_DB_CONN_HEALTH_CHECKS=true

# Allowed hosts (comma-separated)
DJANGO_ALLOWED_HOSTS="localhost,127.0.0.1"

# Optional security toggles
DJANGO_STRICT_PRODUCTION=false
DJANGO_SECURE_SSL_REDIRECT=false
DJANGO_SESSION_COOKIE_SECURE=false
DJANGO_CSRF_COOKIE_SECURE=false
DJANGO_SESSION_COOKIE_SAMESITE="Lax"
DJANGO_CSRF_COOKIE_SAMESITE="Lax"

# Recommended in production when HTTPS is enabled
DJANGO_SECURE_HSTS_SECONDS=31536000
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=true
DJANGO_SECURE_HSTS_PRELOAD=false

# Optional CORS/CSRF (comma-separated)
DJANGO_CORS_ALLOWED_ORIGINS="http://localhost:8000,http://127.0.0.1:8000"
DJANGO_CSRF_TRUSTED_ORIGINS="http://localhost:8000,http://127.0.0.1:8000"

# Optional media storage
DJANGO_MEDIA_URL="/media/"
DJANGO_MEDIA_ROOT="media"

# Optional: S3-compatible media (Cloudflare R2 / MinIO / Supabase S3)
DJANGO_USE_S3_MEDIA=false
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_STORAGE_BUCKET_NAME=""
AWS_S3_ENDPOINT_URL=""
AWS_S3_REGION_NAME="auto"
AWS_S3_ADDRESSING_STYLE="path"
AWS_QUERYSTRING_AUTH=false
DJANGO_S3_PUBLIC_MEDIA_URL=""
