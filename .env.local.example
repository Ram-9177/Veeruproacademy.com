# Local development environment example
# Copy this file to `.env` and fill in real values.
# NEVER commit `.env` with secrets to version control.

DJANGO_DEBUG=true
DJANGO_SECRET_KEY="dev-secret-please-change"

DJANGO_LANGUAGE_CODE="en-us"
DJANGO_TIME_ZONE="UTC"

# SQLite is used by default if DATABASE_URL is not set.
DATABASE_URL="postgresql://your_user:your_password@localhost:5432/veeru_local_db"

DJANGO_ALLOWED_HOSTS="localhost,127.0.0.1"
DJANGO_CORS_ALLOWED_ORIGINS="http://localhost:8000,http://127.0.0.1:8000"
DJANGO_CSRF_TRUSTED_ORIGINS="http://localhost:8000,http://127.0.0.1:8000"

DJANGO_SECURE_SSL_REDIRECT=false
DJANGO_SESSION_COOKIE_SECURE=false
DJANGO_CSRF_COOKIE_SECURE=false
DJANGO_SESSION_COOKIE_SAMESITE="Lax"
DJANGO_CSRF_COOKIE_SAMESITE="Lax"

DJANGO_DB_CONN_MAX_AGE=60
DJANGO_DB_CONN_HEALTH_CHECKS=true

# Production-only safety checks (keep false for local dev)
DJANGO_STRICT_PRODUCTION=false

# If you enable HTTPS settings in production, enable HSTS.
DJANGO_SECURE_HSTS_SECONDS=0
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=false
DJANGO_SECURE_HSTS_PRELOAD=false
