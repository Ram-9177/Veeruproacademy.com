# Local development environment example
# Copy this file to `.env.local` and fill in real values.
# NEVER commit `.env.local` with secrets to version control.

# Postgres / Neon
DATABASE_URL="postgresql://your_user:your_password@localhost:5432/veeru_local_db"
DIRECT_URL="postgresql://your_user:your_password@localhost:5432/veeru_local_db"

# NextAuth
NEXTAUTH_SECRET="dev-secret-please-change"
NEXTAUTH_URL="http://localhost:3000"

# Public site URL (used in a few client/server fetches)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Admin bootstrap (optional)
ADMIN_SETUP_TOKEN="local-admin-setup-token"

# UploadThing (optional - required for media uploads)
UPLOADTHING_SECRET="your-uploadthing-secret"
UPLOADTHING_APP_ID="your-uploadthing-app-id"

# Optional Supabase forwarding (server-side)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Optional feature flags
NEXT_PUBLIC_ENABLE_REALTIME=false
